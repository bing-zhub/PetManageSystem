                  <Insets bottom="30.0" left="30.0" right="30.0" top="10.0" />
               </VBox.margin>
            </JFXTextField>
            <JFXTextField fx:id="productPrice" labelFloat="true" promptText="价格">
               <VBox.margin>
                  <Insets bottom="30.0" left="30.0" right="30.0" top="10.0" />
               </VBox.margin>
            </JFXTextField>
            <JFXTextField fx:id="productBrand" labelFloat="true" promptText="品牌">
